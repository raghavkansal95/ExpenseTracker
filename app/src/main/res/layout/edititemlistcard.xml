<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    >

    <android.support.v7.widget.CardView android:id="@+id/EdititemListNameCardView"
        android:layout_height="wrap_content"
        android:layout_width="200dp"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="10dp"
        >
        <EditText
            android:id="@+id/EdititemListName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="@dimen/headingTextSize"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginRight="10dp"
            android:hint="Item Name"
            />


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/EdititemListQtyCardView"
        android:layout_toRightOf="@id/EdititemListNameCardView"
        android:layout_height="wrap_content"
        android:layout_width="100dp"
        app:cardUseCompatPadding="false"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="70dp"
        >

        <EditText
            android:id="@+id/EdititemListQty"
            android:layout_width="match_parent"
            android:maxLength="5"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:textSize="@dimen/headingTextSize"
            android:hint="Qty"
            />

    </android.support.v7.widget.CardView>



</RelativeLayout>